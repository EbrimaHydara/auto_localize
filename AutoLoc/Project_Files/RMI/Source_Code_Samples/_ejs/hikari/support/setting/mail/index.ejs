<% const hikaripath = "hikari/" -%>
<% const hikariroot = {path: "hikari/", title: "楽天ひかり"} -%>
<% const pagetitle = "メール設定方法" -%>
<% const directories = [{path: hikariroot.path + "support/", label:"お客様サポート"}] -%>
<%-
  include('/_header', {
    pagetitle: pagetitle,
    directories: directories,
    description: 'メールソフトの設定方法をご案内します。',
    noindex: false,
    pathname: filepath,
    ishikari: true,
    canonical_custom: 'https://network.mobile.rakuten.co.jp/hikari/support/setting/mail/',
  });
%>
<%- include('/include/hikari/_common-v2-hikari-css') %>
<link rel="stylesheet" href="<%= sitepath %>assets/css/hikari/support-v2/support-v2.css?20240424">
<%- include('/include/_append-head-hikari') %>
</head>
<body>
<%- include('/include/_prepend-body-hikari') %>

<div class="l-System">
  <%- include('/hikari/include/_header', { headerType: 'normal', pagetitle: pagetitle, directories: directories, tax: false }) %>

  <div class="l-hikari-Section_Main">
    <div class="l-System_Container">
      <h1 class="c-Heading_Lv1"><%= pagetitle %></h1>

      <div class="l-hikari-Section_Sub-short">
        <h2 class="c-Heading_Lv2">メールサーバーの設定</h2>
        <div class="l-hikari-Section_Sub-content-middle">
          <p>受信用メールサーバー（POP／IMAP）と送信用メールサーバー（SMTP）の設定方法をご案内します。</p>
          <ul class="c-Link_List u-Adjust_Mt-16">
            <li><a href="<%= sitepath %><%= hikaripath %>support/setting/mail/basic/">メールサーバーの設定を見る<span class="c-Icon_Arrow-right-l"></span></a></li>
          </ul>
        </div>
      </div>

      <div class="l-hikari-Section_Sub-short">
        <h2 class="c-Heading_Lv2">メールソフトごとの設定</h2>
        <div class="l-hikari-Section_Sub-content-middle">
          <h3 class="c-Heading_Lv3">Windows</h3>
          <ul class="c-Link_List u-Adjust_Mt-16">
            <li><a href="<%= sitepath %><%= hikaripath %>support/setting/mail/windows10/step-01/">Windows10／Windows11<span class="c-Icon_Arrow-right-l"></span></a></li>
            <li><a href="<%= sitepath %><%= hikaripath %>support/setting/mail/office365/step-01/">Outlook2019／Outlook2021／Microsoft365<span class="c-Icon_Arrow-right-l"></span></a></li>
            <li><a href="<%= sitepath %><%= hikaripath %>support/setting/mail/outlook2016/step-01/">Outlook2016<span class="c-Icon_Arrow-right-l"></span></a></li>
          </ul>
        </div>
      </div>

      <div class="l-hikari-Section_Sub-short">
        <h3 class="c-Heading_Lv3">Mac，Android（Gmail），iOS</h3>
        <ul class="c-Link_List l-hikari-Section_Sub-content-middle">
          <li><a href="<%= sitepath %><%= hikaripath %>support/setting/mail/mac/">Mac<span class="c-Icon_Arrow-right-l"></span></a></li>
          <li><a href="<%= sitepath %><%= hikaripath %>support/setting/mail/android/">Android（Gmail）<span class="c-Icon_Arrow-right-l"></span></a></li>
          <li><a href="<%= sitepath %><%= hikaripath %>support/setting/mail/ios/">iOS<span class="c-Icon_Arrow-right-l"></span></a></li>
        </ul>
      </div>

    </div>
  </div>



  <footer class="g-Footer">
    <%- include('/hikari/include/_footer', { pagetitle: pagetitle, directories: directories, hiddenCta: true, hiddenFooterCta: true }) %>
  </footer>

</div>
<%- include('/include/hikari/_common-js') %>
<%- include('/include/_append-body') %>
</body>
</html>
