<script>
document.addEventListener("DOMContentLoaded", function() {
    document.getElementById("tab-menu1").addEventListener("click", function() {
        changeTab("tab-menu1");
    });
    document.getElementById("tab-menu2").addEventListener("click", function() {
        changeTab("tab-menu2");
    });
});

// タブを切り替える関数
function changeTab(tabId) {
    var newQueryParam = "tab-list=" + tabId;
    var currentParams = new URLSearchParams(window.location.search);
    currentParams.set('tab-list', tabId);
    var newUrl = window.location.pathname + '?' + currentParams.toString();
    history.pushState(null, '', newUrl);
}

</script>


