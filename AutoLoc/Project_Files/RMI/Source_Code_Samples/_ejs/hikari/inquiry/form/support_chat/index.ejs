<% const hikariroot = {path: "hikari/", title: "楽天ひかり"} -%>
<% const pagetitle = "メッセージ相談でのお問い合わせ" -%>
<% const directories = [{path: hikariroot.path + "inquiry/", label:"お問い合わせ"}] -%>
<%-
 include('/_header', {
    pagetitle: pagetitle,
    directories: directories,
    description: '楽天ひかりのメッセージ相談でのお問い合わせ窓口はこちらです。氏名、連絡先電話番号、お問い合わせ内容をもれなくご記入の上、メッセージ相談を開始するボタンを選択ください。',
    noindex: false,
    pathname: filepath,
    ishikari: true,
    canonical_custom: 'https://network.mobile.rakuten.co.jp/hikari/inquiry/form/support_chat/',
  });
%>
<%- include('/include/hikari/_common-v2-hikari-css') %>
<%- include('/include/hikari/_common-v2-hikari-css-only-hf') %>
<link rel="stylesheet" href="<%= sitepath %>assets/css/hikari/inquiry/form/support_chat/support_chat.css?20240424">


<%- include('/include/_append-head-hikari') %>
</head>
<body>

<%- include('/include/_prepend-body-hikari') %>

<div class="l-System">
	<%- include('/hikari/include/_header', { headerType: 'normal', pagetitle: pagetitle, directories: directories, tax: false }) %>

		<div class="l-hikari-Section_Main">
			<div class="l-System_Container">
			<h1 class="c-Heading_Lv1"><%= pagetitle %></h1>

			<p class="l-hikari-Section_Main-lead">以下の3項目（全て必須）を入力して「メッセージ相談を開始する」ボタンをクリックしてください。</p>
			<p class="u-Adjust_Mt-16">受付時間：9:00〜18:00（年中無休）</p>

			<form id="cssend_frm" action="https://www.connectstorm.jp/IM/endpoint/client/9/RBB_Chat/843b88e56d104352a00037d1b60c7730e650f39b93403fd7ecfb74502da1158d" method="GET">
				<dl class="c-Dl_Origin u-Adjust_Mt-32 hf-support-chat-dl">
					<div>
						<dt>氏名<span class="c-Form_List-required">必須</span></dt>
						<dd><input type="text" name="im_name" value="" id="im_name" placeholder="例：楽天太郎" class="c-Form_Input"></dd>
					</div>
					<div>
						<dt>連絡先電話番号<span class="c-Form_List-required">必須</span></dt>
						<dd><input type="text" name="tel" value="" id="im_tel" placeholder="例：03XXXXYYYY" class="c-Form_Input"></dd>
					</div>
					<div>
						<dt>お問い合わせ内容<span class="c-Form_List-required">必須</span></dt>
						<dd>
							<p class="c-Txt_Normal-s">お問い合わせ概要は全角40文字までです。</p>
							<textarea name="im_subject" id="im_subject" class="c-Form_Input u-Adjust_Mt-8" maxlength="40" placeholder="例：メールの設定方法がわからない"></textarea>
						</dd>
					</div>
				</dl>
				<div class="l-hikari-Section_Sub-short">
					<h2 class="c-Heading_Lv2">個人情報の取扱について</h2>
					<div class="l-hikari-Section_Sub-content-middle">
						「<a href="https://corp.mobile.rakuten.co.jp/guide/privacy/" target="_blank" class="c-Link_Txt-inline">個人情報の取扱いについて<span class="c-Icon_New-window-l"></span></a>」をご確認いただき、同意される場合は「メッセージ相談を開始する」ボタンをクリックしてお進みください。
					</div>
				</div>
				<div class="hikari-inquiry-form-support_chat_Btn">
          <label class="js-business-hours c-Btn_Primary">
            <span>
              <span><input type="submit" value="メッセージ相談を開始する"></span>
              <span class="c-Icon_Arrow-right-l c-Btn_Icon-end"></span>
            </span>

          </label>
				</div>
			</form>

		</div>
	</div>

    <footer class="g-Footer">
      <%- include('/hikari/include/_footer', { pagetitle: pagetitle, directories: directories, hiddenFooterCta: true, hiddenCta: true, hiddenMenu: true, hiddenPopask: true, hiddenBacktop: true }) %>
    </footer>

</div>
<%- include('/include/hikari/_common-js') %>
<script src="<%= sitepath %>assets/js/hikari/inquiry.form.support_chat.bundle.js?20240521"></script>
<script type="text/javascript">
	(function($){
	  $.ajax({
		  type: 'GET'
	  }).done(function(data, status, xhr) {
		  const serverDate = new Date(xhr.getResponseHeader('Date'));
		  if (serverDate.getYear() > 100) {
			  num_time = serverDate.getHours();
			  console.log(num_time);
			  if (num_time > 17 && num_time < 24) {
				$('.js-business-hours').attr('aria-disabled', 'true').css({'pointer-events' : 'none'});
			  } else if (num_time > -1 && num_time < 9) {
				$('.js-business-hours').attr('aria-disabled', 'true').css({'pointer-events' : 'none'});
			  } else {
				$('.js-business-hours').attr('aria-disabled', 'false').css({'pointer-events' : 'auto'});
			  }
		  }
	  }).fail(err => {
		  console.log(err);
	  });
	})(jQuery);
  </script>

</body>
</html>
