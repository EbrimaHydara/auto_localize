 include('/_header', {
    pagetitle: pagetitle,
    directories: directories,
    description: 'セキュリティーソフトを3台まで利用できます。パソコン・スマートフォン・タブレットなど組み合わせ自由。未知のウイルスに強い特性を持ち、軽さと防御力を兼ね備えたソースネクスト社の製品です。',
    noindex: false,
    pathname: filepath,
    ishikari: true,
    canonical_custom: 'https://network.mobile.rakuten.co.jp/hikari/fee/option/super-security/'
