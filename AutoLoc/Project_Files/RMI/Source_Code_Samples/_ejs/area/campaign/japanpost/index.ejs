<% const pagetitle = "楽天モバイル 3大キャンペーン実施中！" -%>
<% const directories = [{path:"area/", label:"通信・エリア"}] -%>
<% const namespace = "japanpost" -%>
<%-
include('/_header', {
  pagetitle,
  directories,
  description: '楽天モバイルでは、日本郵政グループ従業員様・ご家族様限定のキャンペーンを開催中です。この機会にぜひ楽天モバイルをご利用ください。',
  noindex: true,
  pathname: filepath,
  ogp_img: "https://network.mobile.rakuten.co.jp/assets/img/common/ogp.png",
});
%>
<%- include('/include/_common-css-v2') %>
<link rel="stylesheet" href="<%= sitepath %>assets/css/area/campaign/japanpost/japanpost.css">
<%- include('/include/_append-head') %>
</head>

<body>
  <%- include('/include/_prepend-body') %>
  <div class="l-System">
    <%- include('/include/_header') %>
    <%- include('/include/_breadcrumbs', {
      type: 'head',
      pagetitle,
      directories,
    }) %>

    <div class="<%= namespace %>-Hero">
      <h1>
        <picture>
          <source media="(max-width: <%= themeGlb.max.m %>)" srcset="<%= sitepath %>assets/img/area/campaign/japanpost/kv-sp.png" width="100%">
          <img src="<%= sitepath %>assets/img/area/campaign/japanpost/kv-pc.png" width="1032" height="240" alt="<%= pagetitle %>">
        </picture>
      </h1>
    </div>

    <div class="l-System_Container u-Adjust_Align-center">
      <h2 class="c-Heading_Lv2 u-Adjust_Mt-40">新規お申し込みで<br class="u-Show_Sp"><span class="<%= namespace %>-Hero_underline">20,000ポイント！</span></h2>
      <div class="u-Adjust_Mt-16">
        <a href="<%= sitepath %>area/campaign/japanpost/byod/?l-id=campaign_japanpost_campaign_japanpost_byod" class="c-Banner_Hover-act">
          <picture>
            <source media="(max-width: <%= themeGlb.max.m %>)" srcset="<%= sitepath %>assets/img/area/campaign/japanpost/jp-bnr-byod-sp-343x108.png" width="100%">
            <img src="<%= sitepath %>assets/img/area/campaign/japanpost/jp-bnr-byod-pc-1032x160.png" width="1032" height="160" alt="楽天モバイル新規契約特典要エントリー Rakuten最強プランのお申し込みで20,000円相当楽天ポイントプレゼント!">
          </picture>
        </a>
      </div>
      <p class="c-Txt_Normal-s u-Adjust_Mt-8 u-Adjust_Align-left">※データタイプは対象外</p>
      <h2 class="c-Heading_Lv2 u-Adjust_Mt-40">さらにご契約者様には<br class="u-Show_Sp"><span class="<%= namespace %>-Hero_underline">毎月500ポイント！</span></h2>
      <div class="u-Adjust_Mt-16">
        <a href="<%= sitepath %>area/campaign/japanpost/pointback/?l-id=campaign_japanpost_campaign_japanpost_pointback" class="c-Banner_Hover-act">
          <picture>
            <source media="(max-width: <%= themeGlb.max.m %>)" srcset="<%= sitepath %>assets/img/area/campaign/japanpost/jp-bnr-pointback-sp-343x108.png" width="100%">
            <img src="<%= sitepath %>assets/img/area/campaign/japanpost/jp-bnr-pointback-pc-1032x160.png" width="1032" height="160" alt="楽天モバイル契約継続特典要エントリー 楽天モバイルご契約者様なら毎月500円相当楽天ポイントプレゼント! 最大6,000ポイント">
          </picture>
        </a>
      </div>
      <h2 class="c-Heading_Lv2 u-Adjust_Mt-40">ご家族やご友人を紹介して<br class="u-Show_Sp"><span class="<%= namespace %>-Hero_underline">みんなでおトクに！</span></h2>
      <div class="u-Adjust_Mt-16">
        <a href="<%= sitepath %>area/campaign/japanpost/referral/?l-id=campaign_japanpost_campaign_japanpost_referral" class="c-Banner_Hover-act">
          <picture>
            <source media="(max-width: <%= themeGlb.max.m %>)" srcset="<%= sitepath %>assets/img/area/campaign/japanpost/jp-bnr-referral-sp-343x108.png" width="100%">
            <img src="<%= sitepath %>assets/img/area/campaign/japanpost/jp-bnr-referral-pc-1032x160.png" width="1032" height="160" alt="楽天モバイルご紹介特典要エントリー ご家族・ご友人に 楽天モバイルを紹介すると1人につき10,000円相当楽天ポイントプレゼント!">
          </picture>
        </a>
      </div>
      <p class="c-Txt_Normal-s u-Adjust_Mt-8 u-Adjust_Align-left">※データタイプは対象外</p>
    </div>

    <footer class="g-Footer">
      <div class="g-Footer_Aside">
        <%- include('/include/footer/related/_related-news.ejs') %>
        <%- include('/include/footer/bnr/_bnr-news.ejs') %>
      </div>
      <div class="l-System_Container">
        <%- include('/include/_breadcrumbs', {
          type: 'foot',
          pagetitle,
          directories,
        }) %>
      </div>
      <%- include('/include/_footer') %>
    </footer>
  </div>
  <%- include('/include/_common-js') %>
  <%- include('/include/_append-body') %>
</body>
</html>
