<% const pagetitle = "迷惑メール・SMS申告フォーム" -%>
<% const directories = [{path:"support/", label:"お客様サポート"}, {path:"support/plan/sms/", label:"メール・SMSサービス"}] -%>
<%-
 include('/_header', {
    pagetitle: pagetitle,
    directories: directories,
    description: '',
    noindex: true,
    pathname: filepath
  });
%>

<%- include('/include/_common-css-v2') %>
<link rel="stylesheet" href="<%= sitepath %>assets/css/guide/anti-spam/inquiry/inquiry.css?20240424">
</head>

<body>
  <%- include('/include/_prepend-body') %>
  <div class="l-System">
    <%- include('/include/_header') %>
    <div class="c-Breadcrumbs_Head">
      <ul>
        <li><a href="<%= rootpath %>"><%= sitetitle %></a><span class="c-Icon_Chevron-right"></span></li>
        <%_ if (typeof directories !== 'undefined') { _%>
          <%_ let dirs = []; _%>
          <%_ directories.forEach(function (dir) { _%>
          <%_ if (dir.path !== "") { _%>
            <li><a href="<%= sitepath %><%= dir.path %>"><%= dir.label %></a><span class="c-Icon_Chevron-right"></span></li>
          <%_ } else { _%>
            <li><%= dir.label %><span class="c-Icon_Chevron-right"></span></li>
          <%_ } _%>
          <%_ }) _%>
        <%_ } _%>
        <li aria-current="true"><%= pagetitle %></li>
      </ul>
    </div>
    <div class="u-Adjust_Mt-32">
      <div class="l-System_Container">
        <h1 class="c-Heading_Lv1"><%= pagetitle %></h1>
        <p class="u-Adjust_Mt-24">お客様が受信された迷惑メール・迷惑SMSを窓口へ申告する場合は、以下のフォームに入力してください。</p>
        <div class="u-Adjust_Mt-8">
          <a href="<%= sitepath %>guide/anti-spam/" class="c-Link_Txt-icon-front"><span class="c-Icon_Chevron-left"></span>迷惑メール・SMSを申告する方法</a>
        </div>
        <div class="u-Adjust_Mt-16">
          <p class="c-Heading_Lv3">申告種別</p>
          <p id="err-radio_report_type" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">「申告種別」は必須項目です</p>
          <div class="inquiry-Layout_Radio-area u-Adjust_Mt-16">
            <label class="c-Form_Radioblock">
              <input type="radio" name="report_type" value="迷惑メール" data-validate="radio">
              <span class="c-Form_Radioblock-wrap">
                <span class="c-Form_Radio-icon"></span>
                <span class="c-Form_Radioblock-label">迷惑メール</span>
              </span>
            </label>
            <label class="c-Form_Radioblock">
              <input type="radio" name="report_type" value="迷惑SMS" data-validate="radio">
              <span class="c-Form_Radioblock-wrap">
                <span class="c-Form_Radio-icon"></span>
                <span class="c-Form_Radioblock-label">迷惑SMS</span>
              </span>
            </label>
          </div>
        </div>
        <form id="js-inquiry_Form" class="u-Adjust_Mt-24" style="display: none;">
          <input type="hidden" name="retURL" value="https://network.mobile.rakuten.co.jp/inquiry/thanks.html">

          <dl id="js-inquiry_Form-top" class="c-Form_List">
            <div>
              <dt>受信日時<span class="c-Form_List-required">必須</span></dt>
              <dd>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※迷惑メール・迷惑SMSを受信した日時を入力してください。</p>
                <p id="err-required_date-picker" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">「発生日時（日）」は必須項目です</p>
                <div class="inquiry-Form_Datepicker-container">
                  <input id="date-picker" name="date-picker" class="c-Form_Input u-Adjust_Mb-16 js-Datepicker c-Form_Datepicker" maxlength="" size="" type="text" placeholder="" aria-required="true" data-validate="required" readonly>
                  <span class="c-Icon_Calendar-l js-Datepicker_Btn c-Form_Datepicker_Btn"></span>
                </div>
                <p id="err-required_hours" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">「発生日時（時）」は必須項目です</p>
                <p id="err-required_minutes" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">「発生日時（分）」は必須項目です</p>
                <div class="inquiry-Form_Horizontal u-Adjust_Pt-40">
                  <div class="c-Form_Select u-Adjust_W-120">
                    <select id="hours" name="hours" data-validate="required">
                      <% for (let i = 0; i < 24; i++) { %>
                      <option value="<%= ('00'+ i).slice(-2) %>"><%= ('00'+ i).slice(-2) %></option>
                      <% } %>
                    </select>
                    <span class="c-Form_Select-icon c-Icon_Product-arrow-select"></span>
                  </div>
                  <span class="inquiry-Form_Horizontal-label">時</span>
                  <div class="c-Form_Select u-Adjust_W-120">
                    <select id="minutes" name="minutes" data-validate="required">
                      <% for (let i = 0; i < 60; i++) { %>
                      <option value="<%= ('00'+ i).slice(-2) %>"><%= ('00'+ i).slice(-2) %></option>
                      <% } %>
                    </select>
                    <span class="c-Form_Select-icon c-Icon_Product-arrow-select"></span>
                  </div>
                  <span class="inquiry-Form_Horizontal-label">分</span>
                </div>
              </dd>
            </div>
            <div id="js-report-mail-address" style="display: none;">
              <dt>受信したメールアドレス<span class="c-Form_List-required">必須</span></dt>
              <dd>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※迷惑メールを受信したご自身のメールアドレスを入力ください</p>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※半角80文字以内で入力してください</p>
                <p id="err-required_report-mail-address" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">必須項目です</p>
                <p id="err-email_report-mail-address" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">正しいメールアドレスを入力してください</p>
                <p id="err-length_report-mail-address" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">半角80文字以内で入力してください</p>
                <p id="err-fhwdth_report-mail-address" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">半角英数字で入力してください</p>
                <input id="report-mail-address" class="c-Form_Input" maxlength="80" name="report-mail-address" size="20" type="text" placeholder="例）example@example.com" aria-required="true" data-validate="required length email fhwdth" autocomplete="off">
              </dd>
            </div>
            <div id="js-spam-mail-address" style="display: none;">
              <dt>送信元のメールアドレス<span class="c-Form_List-required">必須</span></dt>
              <dd>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※送信元のメールアドレスを入力してください</p>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※半角80文字以内で入力してください</p>
                <p id="err-required_spam-mail-address" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">必須項目です</p>
                <p id="err-email_spam-mail-address" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">正しいメールアドレスを入力してください</p>
                <p id="err-length_spam-mail-address" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">半角80文字以内で入力してください</p>
                <p id="err-fhwdth_spam-mail-address" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">半角英数字で入力してください</p>
                <input id="spam-mail-address" class="c-Form_Input" maxlength="80" name="spam-mail-address" size="20" type="text" placeholder="例）example@example.com" aria-required="true" data-validate="required length email fhwdth" autocomplete="off">
              </dd>
            </div>
            <div id="js-email-title" style="display: none;">
              <dt>メールの件名<span class="c-Form_List-required">必須</span></dt>
              <dd>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※受信した迷惑メールの件名を入力してください</p>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※255文字以内で入力してください</p>
                <p id="err-required_email-title" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">必須項目です</p>
                <p id="err-length_email-title" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">255文字以内で入力してください</p>
                <textarea id="email-title" class="c-Form_Input" maxlength="255" name="email-title" aria-required="true" data-validate="required length"></textarea>
              </dd>
            </div>
            <div id="js-report-tel-no" style="display: none;">
              <dt>受信電話番号<span class="c-Form_List-required">必須</span></dt>
              <dd>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※迷惑SMSを受信した携帯電話の電話番号を入力してください</p>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※半角数字10文字または半角数字11文字で入力してください</p>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※ー（ハイフン）を入れずに入力してください</p>
                <p id="err-required_report-tel-no" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">必須項目です</p>
                <p id="err-numeric_report-tel-no" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">半角数字で入力してください</p>
                <p id="err-length_report-tel-no" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">正しい電話番号を入力してください</p>
                <p id="err-cellphone_report-tel-no" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">正しい電話番号を入力してください</p>
                <textarea id="report-tel-no" class="c-Form_Input" minlength="10" maxlength="11" name="report-tel-no" size="20" type="text" placeholder="例）090XXXXXXXX" aria-required="true" data-validate="required length numeric cellphone" autocomplete="off"></textarea>
              </dd>
            </div>
            <div id="js-spam-tel-no" style="display: none;">
              <dt>送信元の電話番号<span class="c-Form_List-required">必須</span></dt>
              <dd>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※送信元の電話番号または送信元のアドレスを入力してください</p>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※255文字以内で入力してください</p>
                <p id="err-required_spam-tel-no" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">必須項目です</p>
                <p id="err-length_spam-tel-no" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">255文字以内で入力してください</p>
                <input id="spam-tel-no" class="c-Form_Input" maxlength="255" name="spam-tel-no" aria-required="true" data-validate="required length">
              </dd>
            </div>
            <div>
              <dt>本文<span class="c-Form_List-required">必須</span></dt>
              <dd>
                <p class="c-Txt_Cap u-Adjust_Mb-16">※受信された迷惑メール・迷惑SMSの本文をコピーし貼り付けしてください</p>
                <p id="err-required_content" class="c-Form_Txt-error u-Adjust_Mb-16" aria-hidden="true">必須項目です</p>
                <textarea id="content" class="c-Form_Input" maxlength="63999" name="content" aria-required="true" data-validate="required"></textarea>
              </dd>
            </div>
          </dl>

          <div class="u-Adjust_Mt-0 u-Adjust_Mt-pc-48">
            <h2 class="c-Heading_Lv3">個人情報の取扱いについて</h2>
            <p class="u-Adjust_Mt-16">「<a href="https://corp.mobile.rakuten.co.jp/guide/privacy/" target="_blank" class="c-Link_Txt-inline-icon">個人情報の取扱いについて<span class="c-Icon_New-window-l"></span></a>」をご確認いただき、同意される場合は下記のチェックボタンをチェックしてください。</p>
            <label class="c-Form_Checkbox u-Adjust_Mt-16">
              <input type="checkbox" name="agree" value="" aria-required="true">
              <span class="c-Icon_Check"></span>
              <span class="c-Form_Checkbox-label">個人情報の取扱いに同意します</span>
            </label>
          </div>

          <div class="u-Adjust_Align-center u-Adjust_Mt-48">
            <button id="js-inquiry_Confirm" type="button" class="c-Btn_Secondly-large" aria-disabled="true" disabled><span>入力内容を確認する</span></button>
          </div>
          <p class="c-Txt_Cap u-Adjust_Mt-32">「個人情報の取扱いについて」のチェックボックスにチェックする必要があります。</p>

          <div id="modal-confirm" style="display:none;">
            <h2 class="c-Heading_Lv3 u-Adjust_Mb-32">入力内容の確認</h2>
            <dl class="c-Form_List-confirm">
              <div class="inquiry-Form_Item-area js-inquiry_Item-area">
                <dt>申告種別</dt>
                <dd>
                  <p id="disp-report_type" class="u-Adjust_Txt-break"></p>
                </dd>
              </div>
              <div>
                <dt>受信日時</dt>
                <dd>
                  <p>
                    <span id="disp-date-picker" class="u-Adjust_Txt-break"></span>
                    <span id="disp-hours" class="u-Adjust_Txt-break"></span>時
                    <span id="disp-minutes" class="u-Adjust_Txt-break"></span>分
                  </p>
                </dd>
              </div>
              <div id="js-disp-report-mail-address" style="display: none;">
                <dt>受信したメールアドレス</dt>
                <dd>
                  <p id="disp-report-mail-address" class="u-Adjust_Txt-break"></p>
                </dd>
              </div>
              <div id="js-disp-spam-mail-address" style="display: none;">
                <dt>送信元のメールアドレス</dt>
                <dd>
                  <p id="disp-spam-mail-address" class="u-Adjust_Txt-break"></p>
                </dd>
              </div>
              <div id="js-disp-email-title" style="display: none;">
                <dt>メールの件名</dt>
                <dd>
                  <p id="disp-email-title" class="u-Adjust_Txt-break"></p>
                </dd>
              </div>
              <div id="js-disp-report-tel-no" style="display: none;">
                <dt>受信電話番号</dt>
                <dd>
                  <p id="disp-report-tel-no" class="u-Adjust_Txt-break"></p>
                </dd>
              </div>
              <div id="js-disp-spam-tel-no" style="display: none;">
                <dt>送信元の電話番号</dt>
                <dd>
                  <p id="disp-spam-tel-no" class="u-Adjust_Txt-break"></p>
                </dd>
              </div>
              <div>
                <dt>本文</dt>
                <dd>
                  <p id="disp-content" class="u-Adjust_Txt-break"></p>
                </dd>
              </div>
            </dl>
            <div class="u-Adjust_Align-center u-Adjust_Mt-40">
              <button type="button" id="js-inquiry_Submit" class="c-Btn_Primary"><span>この内容で送信する</span></button>
            </div>
            <div class="u-Adjust_Align-center u-Adjust_Mt-16">
              <button type="button" id="js-inquiry_Confirm-close" class="c-Btn_Regular"><span>修正する</span></button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <footer class="g-Footer">
      <div class="g-Footer_Aside">
        <%- include('/include/footer/bnr/_bnr.ejs') %>
        <div class="l-System_Container">
          <div class="c-Breadcrumbs_Foot">
            <ul>
              <li><a href="<%= rootpath %>"><%= sitetitle %></a><span class="c-Icon_Chevron-right"></span></li>
              <%_ if (typeof directories !== 'undefined') { _%>
                <%_ let dirs = []; _%>
                <%_ directories.forEach(function (dir) { _%>
                <%_ if (dir.path !== "") { _%>
                  <li><a href="<%= sitepath %><%= dir.path %>"><%= dir.label %></a><span class="c-Icon_Chevron-right"></span></li>
                <%_ } else { _%>
                  <li><%= dir.label %><span class="c-Icon_Chevron-right"></span></li>
                <%_ } _%>
                <%_ }) _%>
              <%_ } _%>
              <li aria-current="true"><%= pagetitle %></li>
            </ul>
          </div>
        </div>
      </div>
      <%- include('/include/_footer') %>
    </footer>
  </div>
  <%- include('/include/_common-js', { jquery: '3.6.0' }) %>
  <script src="<%= sitepath %>assets/js/guide.input.bundle.js?20240521"></script>
  <%- include('/include/_append-body') %>
</body>

</html>
