<% const pagetitle = "Apple純正アクセサリ" -%>
<% const directories = [{path:"product/", label:"製品"}, {path:"product/accessory/", label:"アクセサリ"}] -%>
<%-
 include('/_header', {
    pagetitle: pagetitle,
    directories: directories,
    description: '楽天モバイルのApple純正アクセサリラインアップ。楽天モバイルで人気のApple純正ケース、オーディオ、充電器などのアクセサリがご覧いただけます。',
    noindex: false,
    pathname: filepath
  });
%>
<%- include('/include/_common-css-v2') %>
<link rel="stylesheet" href="<%= sitepath %>assets/css/product/product-top.css?20240424">
<link rel="stylesheet" href="<%= sitepath %>assets/css/product/iphone/product-iphone.css?20240426">
<link rel="stylesheet" href="<%= sitepath %>assets/css/accessory/accessory-common.css?20240424">
<link rel="stylesheet" href="<%= sitepath %>assets/css/accessory/apple/accessory-apple-top.css?20240424">
<%- include('/include/_append-head') %>
</head>
<body>
<%- include('/include/_prepend-body') %>

<div class="l-System">

  <%- include('/include/_header') %>

  <div class="c-Breadcrumbs_Head">
    <ul>
      <li><a href="<%= rootpath %>"><%= sitetitle %></a><span class="c-Icon_Chevron-right"></span></li>
      <%_ if (typeof directories !== 'undefined') { _%>
      <%_ let dirs = []; _%>
      <%_ directories.forEach(function (dir) { _%>
        <%_ if (dir.path !== "") { _%>
          <li><a href="<%= sitepath %><%= dir.path %>"><%= dir.label %></a><span class="c-Icon_Chevron-right"></span></li>
        <%_ } else { _%>
          <li><%= dir.label %><span class="c-Icon_Chevron-right"></span></li>
        <%_ } _%>
      <%_ }) _%>
      <%_ } _%>
      <li aria-current="true"><%= pagetitle %></li>
    </ul>
  </div>

  <div class="l-System_Container">
    <p class="c-Txt_Cap u-Adjust_Align-right u-Adjust_Mt-8">※表記の金額はすべて税込です。</p>
    <h1 class="c-Heading_Lv1 u-Adjust_Mt-8">アクセサリ</h1>
    <div class="c-Tab product-top-Layout_Tab u-Adjust_Mt-32">
      <div class="c-Tab_Items" role="tablist">
        <a class="c-Tab_Item" role="tab" aria-selected="true">Apple純正<br class="product-top-Utility_Show-sp-small">アクセサリ</a>
        <a href="<%= sitepath %>product/accessory/apple-related/?l-id=product_accessory_apple_apple-related" class="c-Tab_Item" role="tab" aria-selected="false">Apple関連<br class="product-top-Utility_Show-sp-small">アクセサリ</a>
        <a href="<%= sitepath %>product/accessory/smartphone-related/?l-id=product_accessory_apple_accessory" class="c-Tab_Item" role="tab" aria-selected="false">スマートフォン関連アクセサリ</a>
      </div>
    </div>
  </div>

  <div class="u-Adjust_Mt-24">
    <%- include('/include/product/accessory/_bnr-carousel-apple', {bnr_accessory_scid: 'wi_ich_accy_0009cpn2107'}) %>
  </div>
  <div class="l-System_Container u-Adjust_Mt-24">
    <p class="u-Adjust_Align-center product-top-Utility_Show-sp">
      <span class="c-Txt_Emp-01 c-Txt_Normal-m">Apple Watchの</span>
      <br>
      <span class="c-Txt_Emp-02 c-Txt_Normal-ll">バンド発売中！</span>
    </p>
    <p class="u-Adjust_Align-center product-top-Utility_Show-pc">
      <span class="c-Txt_Emp-01 c-Txt_Normal-l">Apple Watchの</span>
      <span class="c-Txt_Emp-02" style="font-size: 38px;">バンド発売中！</span>
    </p>
    <div class="u-Adjust_Align-center u-Adjust_Mt-24">
      <a href="<%= sitepath %>product/accessory/apple/?l-id=product_accessory_apple_apple-watch#watch" class="c-Btn_Regular"><span>Apple Watchのバンド一覧を見る</span></a>
    </div>
  </div>
  <div class="accessory-common-Layout_Split">
    <span class="c-Txt_Emp-02">一部Apple純正ケース値下げしました！</span>
  </div>
  <div class="accessory-top-Layout_Main">
    <%- /* おすすめアクセサリ */ include('/include/product/accessory/_apple-accessory') %>
    <div>
      <div id="audio"></div>
      <div id="other"></div>
      <div id="case"></div>
      <div id="chargers"></div>
      <div id="battery"></div>
      <div id="cable"></div>
      <div id="watch"></div>
    </div>
    <div id="accessorylist">
      <!-- vue rendering area -->
    </div>
  </div>
  <%- include('/include/product/iphone/_recommend-v2.ejs', {l_id: 'product_accessory_apple', pbOff: true}) %>
  <div class="l-System_Container u-Adjust_Mt-48">
    <%- include('/include/service/check/_bnr', {lid: 'accessory_apple_service_check'}) %>
  </div>
  <div class="u-Adjust_Mt-32">
    <%- include('/include/product/iphone/_byod', {lid: 'product_accessory_apple_byod'}) %>
  </div>
  <div class="u-Adjust_Mt-32">
    <div class="l-System_Container">
      <h2 class="c-Heading_Lv4" id="caution">注意事項</h2>
      <p class="c-Txt_Emp-01 u-Adjust_Mt-24">■各種キャンペーンについて</p>
      <p class="c-Txt_Cap u-Adjust_Mt-8">※「対象iPhone最大32,000円相当おトク」は「Rakuten最強プラン（データタイプ）」申し込み、およびデータタイプの契約が過去にある場合は対象外。期間限定ポイントで付与。48回払いは楽天カードのみ。その他条件あり。詳しくは<a href="<%= sitepath %>campaign/iphone-point/#campaign-rule">キャンペーンルール</a>をご確認ください。</p>
    </div>
  </div>

  <%- include('/include/product/iphone/_chat') %>

  <footer class="g-Footer">
    <div class="g-Footer_Aside">

      <%- include('/include/footer/related/_related-product-top-v2.ejs') %>

      <%- include('/include/footer/bnr/_bnr.ejs') %>

      <%#- include('/faq/include/related-product.ejs') %>

    </div>
    <div class="l-System_Container">
      <div class="c-Breadcrumbs_Foot">
        <ul>
          <li><a href="<%= rootpath %>"><%= sitetitle %></a><span class="c-Icon_Chevron-right"></span></li>
          <%_ if (typeof directories !== 'undefined') { _%>
            <%_ let dirs = []; _%>
            <%_ directories.forEach(function (dir) { _%>
              <%_ if (dir.path !== "") { _%>
                <li><a href="<%= sitepath %><%= dir.path %>"><%= dir.label %></a><span class="c-Icon_Chevron-right"></span></li>
              <%_ } else { _%>
                <li><%= dir.label %><span class="c-Icon_Chevron-right"></span></li>
              <%_ } _%>
            <%_ }) _%>
          <%_ } _%>
          <li aria-current="true"><%= pagetitle %></li>
        </ul>
      </div>
    </div>

    <%- include('/include/_footer') %>

  </footer>

</div>
<%- include('/include/_common-js') %>
<script src="<%= sitepath %>assets/js/accessory.apple.index.bundle.js?20240521"></script>
<%- include('/include/_append-body') %>
<script>window.addEventListener('load', ()=>{if(location.href.includes('#'))location.href=location.href})</script>
</body>
</html>
