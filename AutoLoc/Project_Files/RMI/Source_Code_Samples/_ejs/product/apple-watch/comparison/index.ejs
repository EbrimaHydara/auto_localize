  </div>

  <div class="l-System_Container u-Adjust_Mt-24 u-Adjust_Mb-64">
    <%- include('/include/product/apple-watch/comparison/_apple-watch') %>
  </div>

  <%- /* Apple Watch一覧 */ include('/include/product/apple-watch/_apple-watch-list', { l_id: 'apple-watch-comparison' }) %>
  <%- /* Apple Watchを使うなら楽天モバイルがおすすめ */ include('/include/product/apple-watch/_recommend-product-apple-watch-8', {
    tradeinProduct: 'Watch 7 Hermes 45mm - GPS+Cellular - Stainless',
    tradeinProductDetail: 'Watch 7 Hermes - 45mm（GPS+Cellular）ステンレスケース',
    tradeinPrice: '27,500',
    currentDir: 'comparison',
    date: '2023年12月22日時点',
    customTradeinTitle: 'スマホ下取りサービス',
  }) _%>

  <footer class="g-Footer">

    <div class="g-Footer_Aside">

      <%- include('/include/footer/related/_related-product-v2.ejs') %>

      <%- include('/include/footer/bnr/_bnr.ejs') %>

    </div>
    <div class="l-System_Container">
      <div class="c-Breadcrumbs_Foot">
        <ul>
          <li><a href="<%= rootpath %>"><%= sitetitle %></a><span class="c-Icon_Chevron-right"></span></li>
          <%_ if (typeof directories !== 'undefined') { _%>
          <%_ let dirs = []; _%>
