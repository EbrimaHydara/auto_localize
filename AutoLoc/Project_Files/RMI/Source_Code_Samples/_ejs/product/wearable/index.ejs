<% const pagetitle = "ウェアラブル" -%>
<% const directories = [{path:"product/", label:"製品"}] -%>
<%-
 include('/_header', {
    pagetitle: pagetitle,
    directories: directories,
    description: '',
    noindex: false,
    pathname: filepath
  });
%>
<%- include('/include/_common-css-v2') %>
<link rel="stylesheet" href="<%= sitepath %>assets/css/product/product-top.css?20240424">
<link rel="stylesheet" href="<%= sitepath %>assets/css/wearable/wearable-top.css?20240424">
<%- include('/include/_append-head') %>
</head>
<body>
<%- include('/include/_prepend-body') %>

<div class="l-System">

  <%- include('/include/_header') %>

  <div class="c-Breadcrumbs_Head">
    <ul>
      <li><a href="<%= rootpath %>"><%= sitetitle %></a><span class="c-Icon_Chevron-right"></span></li>
      <%_ if (typeof directories !== 'undefined') { _%>
      <%_ let dirs = []; _%>
      <%_ directories.forEach(function (dir) { _%>
        <%_ if (dir.path !== "") { _%>
          <li><a href="<%= sitepath %><%= dir.path %>"><%= dir.label %></a><span class="c-Icon_Chevron-right"></span></li>
        <%_ } else { _%>
          <li><%= dir.label %><span class="c-Icon_Chevron-right"></span></li>
        <%_ } _%>
      <%_ }) _%>
      <%_ } _%>
      <li aria-current="true"><%= pagetitle %></li>
    </ul>
  </div>

  <div class="l-System_Container">
    <p class="c-Txt_Cap u-Adjust_Align-right u-Adjust_Mt-8">※表記の金額はすべて税込です。</p>
    <h1 class="c-Heading_Lv1 u-Adjust_Mt-8"><%= pagetitle %></h1>
  </div>

  <div class="wearable-top-Layout_Main">
    <div class="js-Tab">
      <div class="wearable-top-Layout_Scroll wearable-top-Layout_Scroll-border">
        <ul role="tablist" class="wearable-top-List">
          <li id="tab-menu1" role="tab" aria-selected="true" aria-controls="tab-content1" data-ratId="product_internet_home-antenna" data-ratEvent="click" data-ratParam="all">スマートウォッチ</li>
        </ul>
      </div>
      <div class="wearable-top-Layout_Item">
        <div class="l-System_Container">
          <div class="c-Tab_Panel" id="tab-content1" role="tabpanel" aria-hidden="false" aria-labelledby="tab-menu1">
            <div class="u-Adjust_Align-left u-Adjust_Pt-40 u-Adjust_Pb-24">
            条件に該当する製品がありません。
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="l-System_Container">
      <div class="u-Adjust_Align-center u-Adjust_Pt-32">
        <a class="c-Btn_Regular" href="<%= sitepath %>product/accessory/">アクセサリ一覧を見る</a>
      </div>

      <h2 class="c-Heading_Lv2 u-Adjust_Mt-32">おすすめオプション</h2>
      <ul class="wearable-top-Layout_List">
      <li>
        <div class="c-Theme-Light u-Adjust_Mt-8">
          <div class="wearable-top-Layout_Grid">
              <p class="wearable-top-Layout_Grid-title u-Adjust_Mt-8">
                <a href="<%= sitepath %>service/replacement-warranty-plus/?l-id=product_wearable_replacement-warranty-plus">スマホ交換保証プラス</a>
              </p>
              <div class="wearable-top-Layout_Grid-image">
                <figure><img src="<%= sitepath %>assets/img/product/img-service-replacement-v2.png?220422" alt=""></figure>
              </div>
              <div class="wearable-top-Layout_Grid-text">
                <p class="c-Txt_Emp-02 u-Adjust_Mt-8">加入できるのは購入時のみ</p>
                <p class="c-Txt_Emp-01 u-Adjust_Mt-8">故障・紛失時に新品同等の同一機種に交換！最短当日中※にお届け</p>
                <p class="c-Txt_Cap u-Adjust_Mt-8">※対象地域：東京／神奈川／千葉／埼玉（12時までに受付の場合）</p>
              </div>
          </div>
        </div>
      </li>
      <li>
        <div class="c-Theme-Light u-Adjust_Mt-8">
          <div class="wearable-top-Layout_Grid">
              <p class="wearable-top-Layout_Grid-title u-Adjust_Mt-8">
                <a href="<%= sitepath %>service/tradein/?l-id=product_wearable_trade-in">スマホ下取りサービス</a>
              </p>
              <div class="wearable-top-Layout_Grid-image">
                <figure><img src="<%= sitepath %>assets/img/product/img-service-tradein-230222.png" alt=""></figure>
              </div>
              <div class="wearable-top-Layout_Grid-text">
                <p class="c-Txt_Emp-01 u-Adjust_Mt-8">Webで簡単査定。お使いのスマホを高額下取りします。</p>
              </div>
          </div>
        </div>
      </li>
    </ul>
    </div>
  </div>

  <footer class="g-Footer">

    <div class="g-Footer_Aside">

      <%- include('/include/footer/related/_related-product-top-v2.ejs') %>

      <%- include('/include/footer/bnr/_bnr.ejs') %>

      <%#- include('/faq/include/related-product.ejs') %>

    </div>
    <div class="l-System_Container">
      <div class="c-Breadcrumbs_Foot">
        <ul>
          <li><a href="<%= rootpath %>"><%= sitetitle %></a><span class="c-Icon_Chevron-right"></span></li>
          <%_ if (typeof directories !== 'undefined') { _%>
          <%_ let dirs = []; _%>
          <%_ directories.forEach(function (dir) { _%>
            <%_ if (dir.path !== "") { _%>
              <li><a href="<%= sitepath %><%= dir.path %>"><%= dir.label %></a><span class="c-Icon_Chevron-right"></span></li>
            <%_ } else { _%>
              <li><%= dir.label %><span class="c-Icon_Chevron-right"></span></li>
            <%_ } _%>
          <%_ }) _%>
          <%_ } _%>
          <li aria-current="true"><%= pagetitle %></li>
        </ul>
      </div>
    </div>
    <%- include('/include/_footer') %>

  </footer>

</div>
<%- include('/include/_common-js') %>
<%- include('/include/_append-body') %>
</body>
</html>
