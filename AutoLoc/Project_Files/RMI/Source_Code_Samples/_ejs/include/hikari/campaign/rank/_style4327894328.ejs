<% const {stageId, stageEn, isClosed} = rankData -%>
<style>
    #rank-ddt .rank-ddt_conversion_btn a,
    #rank-ddt .rank-ddt_conversion_btn .text-entry,
    .rank-ddt_following_button .rank-ddt_conversion_btn {
      background-color: #ff008c;
    }
    #rank-ddt .rank-ddt_conversion_btn a:hover,
    #rank-ddt .rank-ddt_conversion_btn .text-entry:hover,
    .rank-ddt_following_button .rank-ddt_conversion_btn a:hover {
      background-color: #ff33a3;
    }
    .rank-ddt_following_button {
      background-color: #003;
      z-index: 10;
    }
    #rank-ddt .rank-ddt_mainvisual .rank-ddt_inner .rank-ddt_achievement-conditions .rank-ddt_achievement-conditions-text {
      padding-left: 120px;
    }
    #rank-ddt .rank-ddt_mainvisual .rank-ddt_inner .rank-ddt_achievement-conditions .rank-ddt_achievement-conditions-text.rank-ddt_icon-hikari::before {
      background-image: url('<%= sitepath %>assets/img/hikari/campaign/rank/img-icon.png');
      background-size: contain;
      width: 107px;
      height: 44px;
    }
    #rank-ddt .rank-ddt_mainvisual .rank-ddt_inner .rank-ddt_achievement-conditions .rank-ddt_achievement-conditions-text span {
      background-image: url('<%= sitepath %>assets/img/hikari/campaign/rank/achievement-condition-<%= stageId %>-non-mno-pc.png');
      background-position: center;
      background-repeat: no-repeat;
      background-size: contain;
      width: 687px;
      height: 39px;
      text-indent: -9999px;
    }
    #rank-ddt.rank-ddt_<%= stageEn %> .rank-ddt_mainvisual .rank-ddt_inner .rank-ddt_rank-incentive.hikari_use {
      background-image: url('<%= sitepath %>assets/img/hikari/campaign/rank/img-hero-incentive-<%= stageId %>-pc.png?210402');
      background-size: contain;
      width: 100%;
      height: 210px;
    }
    #rank-ddt .rank-ddt_inner {
      width: 100%;
      max-width: 950px;
      padding: 0 16px;
    }

    #rank-ddt .rank-ddt_mainvisual .rank-ddt_comment {
      color: #333;
    }
    #rank-ddt .rank-ddt_mainvisual .rank-ddt_notes {
      display: none;
    }
    <% if (isClosed === 'true') { %>
      #anchor-rank-ddt_conversion_btn {
        display: none!important;
      }
      .js-entry-btn-wrapper {
        display: none!important;
      }
    <% } %>
    @media screen and (max-width: 768px) {
      #rank-ddt .rank-ddt_mainvisual .rank-ddt_inner .rank-ddt_achievement-conditions {
        padding: 0;
      }
      #rank-ddt .rank-ddt_mainvisual .rank-ddt_inner .rank-ddt_achievement-conditions .rank-ddt_achievement-conditions-text.rank-ddt_icon-hikari {
        display: table;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: auto;
        padding-left: 0;
      }
      #rank-ddt .rank-ddt_mainvisual .rank-ddt_inner .rank-ddt_achievement-conditions .rank-ddt_achievement-conditions-text.rank-ddt_icon-hikari::before {
        position: static;
        margin: 0 auto;
      }
      #rank-ddt .rank-ddt_mainvisual .rank-ddt_inner .rank-ddt_achievement-conditions .rank-ddt_achievement-conditions-text span {
        background-image: url('<%= sitepath %>assets/img/hikari/campaign/rank/achievement-condition-<%= stageId %>-non-mno-sp.png');
        width: 90%;
        height: 58px;
        margin-top: 8px;
      }
      #rank-ddt.rank-ddt_<%= stageEn %> .rank-ddt_mainvisual .rank-ddt_inner .rank-ddt_rank-incentive.hikari_use {
        background-image: url('<%= sitepath %>assets/img/hikari/campaign/rank/img-hero-incentive-<%= stageId %>-sp.png?210402');
        background-size: contain;
        min-width: 335px;
        width: 100%;
        height: 218px;
      }
    }
  </style>
