<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- カスタムベース -->
    <style name="RBCustomTheme" parent="android:Theme.Black.NoTitleBar">
        <!-- Screen Transition Effects -->
        <item name="android:windowAnimationStyle">@style/ActivityEffect.Alpha</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:alertDialogTheme">@style/RBCustomTheme.AlertDialog</item>
    </style>

    <style name="RBCustomThemeAppCompat" parent="Theme.AppCompat.NoActionBar">
        <!-- Screen Transition Effects -->
        <item name="android:windowAnimationStyle">@style/ActivityEffect.Alpha</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:alertDialogTheme">@style/RBCustomTheme.AlertDialog</item>
    </style>

    <!-- ステータスバーなし -->
    <style name="RBCustomTheme.Fullscreen" parent="@style/RBCustomTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ダイアログ -->
    <style name="RBCustomTheme.AlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

</resources>