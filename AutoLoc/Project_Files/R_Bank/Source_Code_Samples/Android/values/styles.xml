<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 画面遷移アニメーション用 -->
    <style name="ActivityEffect.Alpha" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_alpha</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_alpha</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_alpha</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_alpha</item>
    </style>

    <!-- タイトル -->
    <style name="HeaderTitle">
        <item name="android:textSize">@dimen/font_36_dp</item>
        <item name="android:textColor">@color/basic_black</item>
    </style>
    <style name="HeaderTitleSmall">
        <item name="android:textSize">@dimen/font_30_dp</item>
        <item name="android:textColor">@color/basic_black</item>
    </style>
    <style name="HeaderSubtitle">
        <item name="android:textSize">@dimen/font_30_dp</item>
        <item name="android:textColor">@color/basic_black</item>
    </style>
    <style name="HeaderTitle2">
        <item name="android:textSize">@dimen/font_40_dp</item>
        <item name="android:textColor">@color/for_txt_normal_new</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar"/>

</resources>