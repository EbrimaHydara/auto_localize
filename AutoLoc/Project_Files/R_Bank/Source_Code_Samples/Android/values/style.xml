<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <declare-styleable name="myGallery">
        <attr name="android:galleryItemBackground" />
    </declare-styleable>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="background_white" parent="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="text_menu">
        <item name="android:textSize">@dimen/middle_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="text_tnm">
        <item name="android:textSize">@dimen/middle_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="text">
        <item name="android:textSize">@dimen/common_font_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_white">
        <item name="android:textSize">@dimen/common_font_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_bold" parent="text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_description" parent="text">
        <item name="android:textColor">@color/description</item>
    </style>

    <style name="text_splash" parent="text_description">
        <item name="android:textSize">@dimen/splash_font_size</item>
    </style>

    <style name="text_title" parent="text">
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_common" parent="text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_common_margin" parent="text_common">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="text_caution_margin" parent="text_common_margin">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="text_description_margin" parent="text_common_margin">
        <item name="android:textColor">@color/description</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!-- UI0004用 -->
    <style name="input_onetimekey">
        <item name="android:layout_width">311dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <!-- UI0012用 -->
    <style name="icon">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="icon_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:baselineAligned">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="icon_area">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="icon_shadow">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- UI0013用 -->
    <style name="coin">
        <item name="android:layout_width">25.5dp</item>
        <item name="android:layout_height">25.5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="coin_off" parent="coin">
        <item name="android:src">@drawable/coin_off</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="coin_on" parent="coin">
        <item name="android:src">@drawable/coin_on</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- UI0018用 -->
    <style name="search">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">100</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:background">@color/transparency</item>
    </style>

    <!-- UI0023用 -->
    <style name="contents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/str_0023_03</item>
        <item name="android:maxLength">40</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/description</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/shape_input1</item>
    </style>

    <!-- 初回ログイン設定用 -->
    <style name="input_editbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="init_setting_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:shadowColor">#333333</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- 画面遷移アニメーション用 -->
    <style name="Alpha.Effect" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_alpha</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_alpha</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_alpha</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_alpha</item>
    </style>

    <style name="button_standard">
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="button_standard_black_char">
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    
     <style name="single_line_japanese_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="text_type">japanese</item>
    </style>

    <style name="single_line_auto_size_text" parent="single_line_japanese_text">
        <item name="android:gravity">end|bottom</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
    </style>

    <!-- NUI1500の明細年月タブ -->
    <style name="custom_tab_text_size" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>