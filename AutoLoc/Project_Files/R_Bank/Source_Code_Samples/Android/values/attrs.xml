<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="custom_custcard">
        <attr name="category_id" format="integer" />
        <attr name="selection_size" format="integer" />
        <attr name="selection_id" format="integer" />
        <attr name="single_selection_type" format="integer">
            <enum name="spinner" value="0" />
            <enum name="radio" value="1" />
        </attr>
        <attr name="column_type" format="integer">
            <enum name="multiple" value="0" />
            <enum name="single" value="1" />
        </attr>
        <attr name="view_mode" format="integer">
            <enum name="edit" value="0" />
            <enum name="confirm" value="1" />
        </attr>
        <attr name="show_splitter" format="boolean" />
    </declare-styleable>
    <declare-styleable name="custom_icon_button">
        <attr name="layout_align" format="integer">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="icon_drawable" format="integer" />
        <attr name="icon_width" format="dimension" />
        <attr name="icon_height" format="dimension" />
        <attr name="icon_align" format="integer">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="text1" format="string" />
        <attr name="text1_color" format="color" />
        <attr name="text1_pressed_color" format="color" />
        <attr name="text1_size" format="dimension" />
        <attr name="text2" format="string" />
        <attr name="text2_color" format="color" />
        <attr name="text2_pressed_color" format="color" />
        <attr name="text2_size" format="dimension" />
        <attr name="text3" format="string" />
        <attr name="text3_color" format="color" />
        <attr name="text3_pressed_color" format="color" />
        <attr name="text3_size" format="dimension" />
        <attr name="show_next" format="boolean" />
        <attr name="next_drawable" format="integer" />
        <attr name="inactivated" format="boolean" />
        <attr name="inactive_color" format="color" />
    </declare-styleable>
    <declare-styleable name="custom_tab">
        <attr name="ttitle" format="string" />
        <attr name="ttitle_color" format="color" />
    </declare-styleable>
    <declare-styleable name="custom_pin">
        <attr name="exec" format="integer" />
    </declare-styleable>
    <declare-styleable name="custom_aspect_ratio">
        <attr name="width_ratio" format="integer" />
        <attr name="height_ratio" format="integer" />
        <attr name="adjust_base" format="integer">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="custom_textview_with_unit">
        <attr name="text_gravity">
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="center" value="17" />
        </attr>
        <attr name="text_text" format="string" />
        <attr name="text_maxLength" format="integer" />
        <attr name="text_inputType">
            <flag name="text" value="1" />
            <flag name="number" value="2" />
        </attr>
        <attr name="text_hint" format="string" />
        <attr name="text_contentDescription" format="string" />
        <attr name="unit_text" format="string" />
        <attr name="icon_image" format="reference" />
    </declare-styleable>
    <declare-styleable name="custom_font">
        <attr name="text_type" format="integer">
            <enum name="japanese" value="1" />
            <enum name="english" value="2" />
            <enum name="amount" value="3" />
        </attr>
    </declare-styleable>
</resources>
