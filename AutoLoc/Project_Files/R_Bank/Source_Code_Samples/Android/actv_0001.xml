<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic_white" >
    
    <RelativeLayout
        android:id="@+id/rela_ui0001_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/ui0001_centerVertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/imgv_ui0001_logo_rkbk"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_above="@id/ui0001_centerVertical"
            android:src="@drawable/bm_splash_logo_rkbk" />

        <TextView
            android:id="@+id/txt_ui0001_academy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_88"
            android:text="@string/str_ui0001_academy_name"
            android:textColor="@color/for_txt_normal"
            android:textSize="@dimen/font_24_dp" />

        <TextView
            android:id="@+id/txt_ui0001_registered_financial_institution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txt_ui0001_academy_name"
            android:layout_centerHorizontal="true"
            android:text="@string/str_ui0001_registered_financial_institution"
            android:textColor="@color/for_txt_normal"
            android:textSize="@dimen/font_24_dp" />
        
        <TextView
            android:id="@+id/txt_ui0001_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txt_ui0001_registered_financial_institution"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/padding_24"
            android:text="@string/str_ui0001_company_name"
            android:textColor="@color/for_txt_normal"
            android:textSize="@dimen/font_40_dp" />

        <TextView
            android:id="@+id/txt_ui0001_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txt_ui0001_company_name"
            android:paddingBottom="@dimen/padding_52"
            android:layout_centerHorizontal="true"
            android:text="@string/str_ui0001_version"
            android:textColor="@color/for_txt_normal"
            android:textSize="@dimen/font_24_dp" />

    </RelativeLayout>

    <include layout="@layout/loading" />

</FrameLayout>
