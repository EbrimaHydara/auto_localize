<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    style="@style/background_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/for_bg_basic"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/dw_shape_bg_header"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_header_title"
                style="@style/HeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_0004" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/layout_ui0004_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_ui0004_quick_login_attestation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:layout_marginRight="@dimen/margin_40"
                    android:layout_marginTop="@dimen/margin_50"
                    android:text="@string/str_ui0004_quick_login_attestation"
                    android:textColor="@color/for_txt_normal"
                    android:textSize="@dimen/font_30" />

                <LinearLayout
                    android:id="@+id/layout_ui0004_onetime_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_30"
                    android:orientation="vertical" >

                    <View
                        android:id="@+id/view_ui0004_stroke_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/stroke_2"
                        android:background="@color/basic_black" />

                    <RelativeLayout
                        android:id="@+id/layout_ui0004_onetime_key_issuance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_30"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_30" >

                        <ImageView
                            android:id="@+id/imgv_ui0004_icon_number_01"
                            android:layout_width="@dimen/size_icon_number_width"
                            android:layout_height="@dimen/size_icon_number_height"
                            android:src="@drawable/bm_icon_number_01" />

                        <TextView
                            android:id="@+id/txt_ui0004_onetime_key_issuance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:layout_toRightOf="@+id/imgv_ui0004_icon_number_01"
                            android:text="@string/str_ui0004_onetime_key_issuance"
                            android:textColor="@color/for_txt_normal"
                            android:textSize="@dimen/font_30"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_ui0004_onetime_key_issuance_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:text="@string/str_ui0004_onetime_key_issuance_explain"
                        android:textColor="@color/for_txt_normal"
                        android:textSize="@dimen/font_30" />

                    <jp.co.rakuten_bank.rakutenbank.ui.component.common.RBIconButton
                        xmlns:icobtn="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/btn_ui0004_issuance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="@dimen/margin_40"
                        android:background="@drawable/dw_btn_gray_gradient"
                        android:padding="@dimen/padding_10"
                        icobtn:icon_drawable="@drawable/dw_icon_mail"
                        icobtn:icon_height="@dimen/size_icon_btn_small_height"
                        icobtn:icon_width="@dimen/size_icon_btn_small_width"
                        icobtn:text1="@string/str_ui0004_onetime_key_issuance_btn"
                        icobtn:text1_color="@drawable/dw_btn_text_color_normal"
                        icobtn:text1_size="@dimen/font_30" />

                    <RelativeLayout
                        android:id="@+id/layout_ui0004_mail_miss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/margin_40"
                        android:layout_marginTop="@dimen/margin_30" >

                        <TextView
                            android:id="@+id/txt_ui0004_mail_miss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_16"
                            android:text="@string/str_ui0004_mail_miss"
                            android:textColor="@color/for_txt_link_arrow"
                            android:textSize="@dimen/font_30" />

                        <ImageView
                            android:id="@+id/imgv_ui0004_right_arrow_1"
                            android:layout_width="@dimen/size_link_arrow_width"
                            android:layout_height="@dimen/size_link_arrow_height"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/txt_ui0004_mail_miss"
                            android:adjustViewBounds="true"
                            android:src="@drawable/bm_icon_right_arrow" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layout_ui0004_onetime_key_send"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_40"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <View
                            android:id="@+id/view_ui0004_stroke_gray"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/stroke_2"
                            android:background="@color/basic_lightgrey" />

                        <TextView
                            android:id="@+id/txt_ui0004_onetime_key_send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_30"
                            android:text="@string/str_ui0004_onetime_key_send"
                            android:textColor="@color/for_txt_normal"
                            android:textSize="@dimen/font_30" />

                        <TextView
                            android:id="@+id/txt_ui0004_address_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_30"
                            android:gravity="center_horizontal"
                            android:text="○○○○○○○○○○○○\@co.ne.jp"
                            android:textColor="@color/for_txt_normal"
                            android:textSize="@dimen/font_38"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_ui0004_address_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_20"
                            android:gravity="center_horizontal"
                            android:text="○○○○○○○○○○○○\@co.ne.jp"
                            android:textColor="@color/for_txt_normal"
                            android:textSize="@dimen/font_38"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_ui0004_address_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_20"
                            android:gravity="center_horizontal"
                            android:text="○○○○○○○○○○○○\@co.ne.jp"
                            android:textColor="@color/for_txt_normal"
                            android:textSize="@dimen/font_38"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_ui0004_address_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_20"
                            android:gravity="center_horizontal"
                            android:text="○○○○○○○○○○○○\@co.ne.jp"
                            android:textColor="@color/for_txt_normal"
                            android:textSize="@dimen/font_38"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_ui0004_address_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_20"
                            android:gravity="center_horizontal"
                            android:text="○○○○○○○○○○○○\@co.ne.jp"
                            android:textColor="@color/for_txt_normal"
                            android:textSize="@dimen/font_38"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_40"
                            android:background="@drawable/dw_shape_box_red"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_30" >

                            <TextView
                                android:id="@+id/txt_ui0004_onetime_key_limit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_ui0004_onetime_key_limit"
                                android:textColor="@color/for_txt_alert_red"
                                android:textSize="@dimen/font_30" />

                            <TextView
                                android:id="@+id/txt_ui0004_onetime_key_limit_after"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_ui0004_onetime_key_limit_after"
                                android:textColor="@color/for_txt_normal"
                                android:textSize="@dimen/font_30" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/view_ui0004_stroke_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/stroke_2"
                        android:background="@color/basic_black" />

                    <RelativeLayout
                        android:id="@+id/layout_ui0004_onetime_key_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_30"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_30" >

                        <ImageView
                            android:id="@+id/imgv_ui0004_icon_number_02"
                            android:layout_width="@dimen/size_icon_number_width"
                            android:layout_height="@dimen/size_icon_number_height"
                            android:src="@drawable/bm_icon_number_02" />

                        <TextView
                            android:id="@+id/txt_ui0004_onetime_key_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:layout_toRightOf="@+id/imgv_ui0004_icon_number_02"
                            android:text="@string/str_ui0004_onetime_key_input"
                            android:textColor="@color/for_txt_normal"
                            android:textSize="@dimen/font_30"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_ui0004_onetime_key_input_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:text="@string/str_ui0004_onetime_key_input_explain"
                        android:textColor="@color/for_txt_normal"
                        android:textSize="@dimen/font_30" />

                    <EditText
                        android:id="@+id/edit_ui0004_onetime_key_input"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/margin_40"
                        android:layout_marginTop="@dimen/margin_30"
                        android:layout_weight="1"
                        android:background="@drawable/dw_shape_box_white"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:maxLength="20"
                        android:padding="@dimen/padding_10"
                        android:textColor="@color/for_txt_normal"
                        android:textSize="@dimen/font_30" >

                        <requestFocus />
                    </EditText>

                    <View
                        android:id="@+id/view_ui0004_stroke_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/stroke_2"
                        android:background="@color/basic_black" />

                    <jp.co.rakuten_bank.rakutenbank.ui.component.common.RBIconButton
                        xmlns:icobtn="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/btn_ui0004_onetime_key_attestation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/margin_50"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="@dimen/margin_40"
                        android:background="@drawable/dw_btn_normal_gadient"
                        android:padding="@dimen/padding_20"
                        icobtn:icon_drawable="@drawable/dw_icon_attestation"
                        icobtn:icon_height="@dimen/size_icon_btn_normal_height"
                        icobtn:icon_width="@dimen/size_icon_btn_normal_width"
                        icobtn:inactive_color="@color/inactive_orange"
                        icobtn:text1="@string/str_ui0004_onetime_key_attestation_btn"
                        icobtn:text1_color="@drawable/dw_btn_text_color_normal" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/loading" />

</FrameLayout>